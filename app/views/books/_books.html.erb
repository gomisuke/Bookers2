
<td><%= link_to user_path(book.user) do %>
	<%= attachment_image_tag book.user, :profile_image, size:"50x50", format: "jpeg", class: "", fallback: "no_image.jpeg" %>
	<% end %>
</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body  %></td>
<td>
	<% if book.favorited_by(current_user) %>
		<%= link_to book_favorites_path(book.id), method: :delete , remote: true do %>
			<i class="fas fa-heart"></i>
		<% end %>
		<%= book.favorites.count %>
	<% else %>
		<%= link_to book_favorites_path(book.id), method: :post , remote: true do %>
			<i class="far fa-heart"></i>
		<% end %>
		<%= book.favorites.count %>
	<% end %>
</td>
<td>
	<p>コメント数:<%= book.book_comments.count %></p>
</td>
