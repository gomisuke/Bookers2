<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2>Follower Users</h2>
			<% if @user.follower_user.count == 0 %>
				<p>ユーザーはいません</p>
			<% else %>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @user.follower_user.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, size:"50x50", format:"jpeg", fallback: "no_image.jpeg" %></td>
							<td><%= user.name %></td>
							<td>フォロー数:<%= user.following_user.count %></td>
							<td>フォロワー数:<%= user.follower_user.count %></td>
							<td><%= link_to "Show", user_path(user.id) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
</div>