
<div class="container">
	<%= render "layouts/error_messages", model: @book %>
	<div class="row">
		<%= render "layouts/sidebar", {user: @user, book:@book} %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
					<th></th>
				</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
				<tr id="book_<%= book.id %>">
					<%= render 'books/books', { book: book } %>
				</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
